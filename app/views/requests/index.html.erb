<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Age</th>
      <th>Location from</th>
      <th>Location destination</th>
      <th>Travel date</th>
      <th>Prefered time from</th>
      <th>Prefered time to</th>
      <th>Notes</th>
      <th>Zone</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.Name %></td>
        <td><%= request.Telephone %></td>
        <td><%= request.Age %></td>
        <td><%= request.Location_From %></td>
        <td><%= request.Location_Destination %></td>
        <td><%= request.Travel_date %></td>
        <td><%= request.prefered_time_from %></td>
        <td><%= request.prefered_time_to %></td>
        <td><%= request.Notes %></td>
        <td><%= request.zone %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
<%= link_to 'Back to Notifications', notifications_path %>
